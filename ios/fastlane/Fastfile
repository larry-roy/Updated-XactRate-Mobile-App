# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Set iOS deployment target (if needed)
    # update_app_team_identifier(
    #   xcodeproj: "XactRate.xcodeproj",
    #   team_id: "YOUR_TEAM_ID" # Get from Apple Developer account
    # )
    
    increment_build_number(xcodeproj: "XactRate.xcodeproj")
    
    build_app(
      workspace: "XactRate.xcworkspace",
      scheme: "XactRate",
      export_method: "app-store",
      export_xcargs: "-allowProvisioningUpdates",
      clean: true
    )
    
    upload_to_testflight
  end
end
